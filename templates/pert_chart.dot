<metal:block metal:use-macro="container/dotfile_master/macros/master">
<metal:block metal:fill-slot="main">
// $Id: pert_chart.dot,v 1.4 2003/06/27 14:06:49 smurp Exp $
  size="7.5,10"
  rankdir="LR"
//  rotate=90
//  ratio=compress
subgraph cluster_legend {
  bgcolor=lightgrey
  ratio=compress
  label="PERT Chart Legend"
<tal:block
   define="abs_kb_url
             python:server_absolute_url + request.object_request() + '/';
           all_task_statuses 
             python:call_procedure(
                get_procedure('names_and_pretty_names'),
                arguments=(get_class_instances('TaskStatus')[0],'\\n',this_kb))">
  <tal:dummy
     repeat="a_task_status all_task_statuses">
	<tal:dummy replace="python:a_task_status[0]"/> 
          [label="<tal:dummy replace="python:a_task_status[1]"/>", 
           shape=component,
    <tal:block 
       condition="python:str(get_frame_name(a_task_status[0])) == 'complete'">
           style=filled,
           fillcolor=green,
    </tal:block>
    <tal:block 
       condition="python:str(get_frame_name(a_task_status[0])) == 'in_progress'">
           style=filled,
           fillcolor=orange,
    </tal:block>
    <tal:block 
       condition="python:str(get_frame_name(a_task_status[0])) == 'blocked'">
           style=filled,
           fillcolor=pink,
    </tal:block>
           URL="<tal:dummy replace="python:abs_kb_url+str(a_task_status[0])"/>"];
  </tal:dummy>
</tal:block>
}
<tal:block
   define="abs_kb_url
             python:server_absolute_url + request.object_request() + '/';
           all_tasks 
             python:call_procedure(
                get_procedure('names_and_pretty_names'),
                arguments=(get_class_instances('Task')[0],'\\n',this_kb))">


  URL="<tal:dummy replace="abs_kb_url"/>"
  <tal:dummy
     repeat="a_task all_tasks">
	<tal:dummy replace="python:a_task[0]"/> 
          [label="<tal:dummy replace="python:a_task[1]"/>", 
           shape=component,
    <tal:block 
       condition="python:str(get_slot_value(a_task[0],
                                            'Status')[0]) == 'complete'">
         style=filled,
         fillcolor=green,
    </tal:block>
    <tal:block 
       condition="python:str(get_slot_value(a_task[0],
                                            'Status')[0]) == 'in_progress'">
         style=filled,
         fillcolor=orange,
    </tal:block>
    <tal:block 
       condition="python:str(get_slot_value(a_task[0],
                                            'Status')[0]) == 'blocked'">
         style=filled,
         fillcolor=pink,
    </tal:block>
         URL="<tal:dummy replace="python:abs_kb_url+str(a_task[0])"/>"];
        <tal:block
           repeat="a_relative python:get_slot_values(a_task[0],
                                                    'Predecessors')[0]">
             <tal:dummy replace="a_relative"/> -> 
             <tal:dummy replace="python:a_task[0]"/>;
        </tal:block>
  </tal:dummy>
</tal:block>

</metal:block>
</metal:block>
